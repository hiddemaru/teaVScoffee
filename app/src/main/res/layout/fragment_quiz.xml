<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizFragment">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="134dp"
            android:layout_height="132dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/cup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/question_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Apa yang kamu minum jika ingin rilex?"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <Button
            android:id="@+id/tea_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:background="#F5BE5F"
            android:padding="50dp"
            android:text="TEH"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/question_text" />

        <Button
            android:id="@+id/coffee_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="8dp"
            android:background="#F5BE5F"
            android:paddingLeft="40dp"
            android:paddingTop="50dp"
            android:paddingRight="40dp"
            android:paddingBottom="50dp"
            android:text="COFFEE"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/tea_btn"
            app:layout_constraintEnd_toEndOf="@+id/question_text"
            app:layout_constraintStart_toEndOf="@+id/tea_btn"
            app:layout_constraintTop_toTopOf="@+id/tea_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>